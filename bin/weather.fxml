<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="WeatherController">
   <TextField fx:id="locationField" promptText="Enter Location"/>
   <Button fx:id="getWeatherButton" text="Get Weather"/>
   <Label fx:id="temperatureLabel" text="Temperature: -"/>
   <Label fx:id="humidityLabel" text="Humidity: -"/>
   <Label fx:id="windSpeedLabel" text="Wind Speed: -"/>
   <VBox.margin>
      <Insets top="20.0"/>
   </VBox.margin>
</VBox>
